<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EssentialUIKit.Views.ECommerce.SortPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EssentialUIKit.Views.ECommerce"
    xmlns:catalog="clr-namespace:ShoppingCart.ViewModels.Catalog;assembly=ShoppingCart"
    xmlns:controls1="clr-namespace:ShoppingCart.Controls;assembly=ShoppingCart"
    Title="Sort"
    BackgroundColor="{DynamicResource Gray-White}"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Spacing="0">

        <!--  Title View  -->
        <controls1:TitleView Title="Sort" />

        <local:SortView />

    </StackLayout>

</ContentPage>